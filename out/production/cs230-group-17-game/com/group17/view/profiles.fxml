<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" style="-fx-background-color: lightgrey; -fx-border-color: black;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.controller.ProfileController">
    <bottom>
        <HBox fx:id="root_bottom" alignment="CENTER" prefHeight="50.0" prefWidth="800" BorderPane.alignment="CENTER">
            <children>
                <Label text="Current Profile: ">
                    <font>
                        <Font name="Segoe UI Italic" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="lbl_profile" text="None">
                    <font>
                        <Font name="Segoe UI" size="14.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </bottom>
    <left>
        <VBox fx:id="root_left" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
    </left>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <right>
        <VBox fx:id="root_right" alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
    </right>
    <center>
        <VBox fx:id="root_main" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="lst_profiles" prefHeight="600.0" prefWidth="200.0" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label id="button" fx:id="btn_load" onMousePressed="#onClickBtnLoad" stylesheets="@styles.css" text="Load">
                     <font>
                        <Font name="Segoe UI Semibold" size="24.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin></Label>
                  <Label id="button" fx:id="btn_create" onMousePressed="#onClickBtnCreate" stylesheets="@styles.css" text="Create">
                     <font>
                        <Font name="Segoe UI Semibold" size="24.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label id="button" fx:id="btn_delete" onMousePressed="#onClickBtnDelete" stylesheets="@styles.css" text="Delete">
                     <font>
                        <Font name="Segoe UI Semibold" size="24.0" />
                     </font>
                  </Label>
                  <Label id="button" fx:id="btn_back" onMousePressed="#onClickBtnBack" stylesheets="@styles.css" text="Back">
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                     <font>
                        <Font name="Segoe UI Semibold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children></VBox>
    </center>
    <top>
        <VBox fx:id="root_top" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="lbl_title" text="Profile Selection">
                    <font>
                        <Font name="Segoe UI Black Italic" size="40.0" />
                    </font>
                </Label>
                <Label fx:id="lbl_subtitle" text="Please select a profile..." textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font name="Segoe UI Light" size="18.0" />
                    </font></Label>
            </children>
        </VBox>
    </top>
</BorderPane>
