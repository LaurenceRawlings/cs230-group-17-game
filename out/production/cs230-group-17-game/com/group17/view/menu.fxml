<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" style="-fx-background-color: lightgrey; -fx-border-color: black;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.controller.MenuController">
    <bottom>
        <HBox fx:id="root_bottom" alignment="CENTER" prefHeight="50.0" prefWidth="800" BorderPane.alignment="CENTER">
         <children>
            <Label text="Current Profile: ">
               <font>
                  <Font name="Segoe UI Italic" size="14.0" />
               </font>
            </Label>
            <Label fx:id="lbl_profile" text="None">
               <font>
                  <Font name="Segoe UI" size="14.0" />
               </font>
            </Label>
         </children>
        </HBox>
    </bottom>
    <left>
        <VBox fx:id="root_left" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
    </left>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <right>
        <VBox fx:id="root_right" alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
    </right>
   <center>
      <VBox fx:id="root_main" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label id="button" fx:id="btn_continue" onMousePressed="#onClickBtnContinue" stylesheets="@styles.css" text="Continue Game &gt;">
               <font>
                  <Font name="Segoe UI Semibold" size="24.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <Label id="button" fx:id="btn_new" onMousePressed="#onClickBtnNew" stylesheets="@styles.css" text="New Game &gt;">
               <font>
                  <Font name="Segoe UI Semibold" size="24.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <Label id="button" fx:id="btn_profile" onMousePressed="#onClickBtnProfile" stylesheets="@styles.css" text="Select Profile &gt;">
               <font>
                  <Font name="Segoe UI Semibold" size="24.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <Label id="button" fx:id="btn_leaderboard" onMousePressed="#onClickBtnLeaderboard" stylesheets="@styles.css" text="Leaderboard &gt;">
               <font>
                  <Font name="Segoe UI Semibold" size="24.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <Label id="button" fx:id="btn_quit" onMousePressed="#onClickBtnQuit" stylesheets="@styles.css" text="QUIT">
               <font>
                  <Font name="Segoe UI Semibold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
         </children></VBox>
   </center>
   <top>
      <VBox fx:id="root_top" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lbl_title" text="Group 17 Game">
               <font>
                  <Font name="Segoe UI Black Italic" size="40.0" />
               </font>
            </Label>
            <Label fx:id="lbl_motd" text="MOTD" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font name="Segoe UI Light" size="18.0" />
               </font></Label>
         </children>
      </VBox>
   </top>
</BorderPane>
