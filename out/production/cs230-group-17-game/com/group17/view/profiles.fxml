<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="root" style="-fx-background-color: lightgrey; -fx-border-color: black;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.controller.ProfilesController">
    <bottom>
        <HBox fx:id="root_bottom" alignment="CENTER" prefHeight="50.0" prefWidth="800" BorderPane.alignment="CENTER">
            <Label text="Current Profile: ">
                <font>
                    <Font name="Segoe UI Italic" size="14.0" />
                </font>
            </Label>
            <Label fx:id="lbl_profile" text="None">
                <font>
                    <Font name="Segoe UI" size="14.0" />
                </font>
            </Label>
        </HBox>
    </bottom>
    <left>
        <VBox fx:id="root_left" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
    </left>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <right>
        <VBox fx:id="root_right" alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
    </right>
    <center>
        <VBox fx:id="root_main" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <ListView fx:id="lst_profiles" focusTraversable="false" prefHeight="600.0" prefWidth="200.0" stylesheets="@styles.css" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <Label id="button" fx:id="btn_create" onMouseClicked="#onClickBtnCreate" stylesheets="@styles.css" text="CREATE">
                    <font>
                        <Font name="Segoe UI Semibold" size="24.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </Label>
                <Label id="button" fx:id="btn_delete" onMouseClicked="#onClickBtnDelete" stylesheets="@styles.css" text="DELETE">
                    <font>
                        <Font name="Segoe UI Semibold" size="24.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </Label>
                <Label id="button" fx:id="btn_enter" onMouseClicked="#onClickBtnEnter" stylesheets="@styles.css" text="ENTER &gt;">
                    <font>
                        <Font name="Segoe UI Semibold" size="24.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Label>
            </HBox>
        </VBox>
    </center>
    <top>
        <VBox fx:id="root_top" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <Label fx:id="lbl_title" text="Profile Selection">
                <font>
                    <Font name="Segoe UI Black Italic" size="40.0" />
                </font>
            </Label>
            <Label fx:id="lbl_subtitle" text="Please select a profile..." textAlignment="CENTER" wrapText="true">
                <font>
                    <Font name="Segoe UI Light" size="18.0" />
                </font>
            </Label>
        </VBox>
    </top>
</BorderPane>
