<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: lightgrey; -fx-border-color: black;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.game.controller.LeaderboardController">
    <bottom>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="800" BorderPane.alignment="CENTER">
            <ComboBox fx:id="cmb_language" focusTraversable="false" onAction="#setLanguage" promptText="🌍">
                <HBox.margin>
                    <Insets right="20.0" />
                </HBox.margin>
            </ComboBox>
            <Label fx:id="lbl_currentProfile" text="Current Profile: ">
                <font>
                    <Font name="Segoe UI Italic" size="14.0" />
                </font>
            </Label>
            <Label fx:id="lbl_profile" text="None">
                <font>
                    <Font name="Segoe UI" size="14.0" />
                </font>
            </Label>
        </HBox>
    </bottom>
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
    </left>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <right>
        <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
    </right>
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <Label fx:id="lbl_selectLevel" text="Select Level:">
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
                    <font>
                        <Font name="Segoe UI" size="18.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cmb_levels" focusTraversable="false" onAction="#levelChanged" stylesheets="@styles.css" />
            </HBox>
            <Label fx:id="lbl_first" style="-fx-background-color: gold;" text="[EMPTY]">
                <font>
                    <Font name="Segoe UI Black" size="18.0" />
                </font>
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </Label>
            <Label fx:id="lbl_second" style="-fx-background-color: silver;" text="[EMPTY]">
                <font>
                    <Font name="Segoe UI Black" size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="20.0" top="20.0" />
                </VBox.margin>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </Label>
            <Label fx:id="lbl_third" style="-fx-background-color: cf9646;" text="[EMPTY]">
                <font>
                    <Font name="Segoe UI Black" size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </Label>
            <Label id="button" fx:id="btn_back" onMouseClicked="#obClickBtnBack" stylesheets="@styles.css" text="&lt; BACK">
                <VBox.margin>
                    <Insets bottom="20.0" top="50.0" />
                </VBox.margin>
                <font>
                    <Font name="Segoe UI Semibold" size="24.0" />
                </font>
            </Label>
        </VBox>
    </center>
    <top>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <Label fx:id="lbl_title" text="Leaderboard">
                <font>
                    <Font name="Segoe UI Black Italic" size="40.0" />
                </font>
            </Label>
            <Label fx:id="lbl_motd" text="MOTD" textAlignment="CENTER" wrapText="true">
                <font>
                    <Font name="Segoe UI Light" size="18.0" />
                </font>
            </Label>
        </VBox>
    </top>
</BorderPane>
